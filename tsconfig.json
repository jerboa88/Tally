{
	"extends": "astro/tsconfigs/strictest",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"paths": {
			"@components/*": ["./src/components/*"],
			"@config/*": ["./src/config/*"],
			"@effects/*": ["./src/effects/*"],
			"@i18n/*": ["./src/i18n/*"],
			"@images/*": ["./src/images/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@stores/*": ["./src/stores/*"],
			"@utils/*": ["./src/utils/*"],
		}
	}
}

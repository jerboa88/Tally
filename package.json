{
	"name": "tally",
	"version": "3.0.0",
	"description": "Your favorite character counter, now with a dark mode! Count the number of words, sentences, and paragraphs in your text instantly.",
	"source": "src/index.html",
	"browserslist": "defaults",
	"scripts": {
		"start": "parcel",
		"dev": "parcel",
		"build": "parcel build",
		"clean": "rimraf dist",
		"test": "ava",
		"lint": "biome lint .",
		"format": "biome format . --fix",
		"upgrade-interactive": "pnpx npm-check-updates -i --format group -p pnpm"
	},
	"keywords": [
		"word counter",
		"character counter",
		"sentence counter",
		"paragraph counter",
		"text analyzer",
		"text statistics"
	],
	"author": "John Goodliff (https://johng.io)",
	"license": "MIT",
	"type": "module",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@fontsource-variable/roboto-flex": "^5.2.8",
		"@fontsource-variable/roboto-slab": "^5.2.8",
		"@parcel/config-default": "^2.16.0",
		"@parcel/packager-raw-url": "2.16.0",
		"@parcel/transformer-jsonld": "2.16.0",
		"@parcel/transformer-webmanifest": "2.16.0",
		"ava": "^6.4.1",
		"parcel": "^2.16.0",
		"parcel-reporter-static-files-copy": "^1.5.3",
		"rimraf": "^6.0.1",
		"sharp": "^0.33.5",
		"svgo": "^3.3.2"
	},
	"@parcel/transformer-css": {
		"drafts": {
			"nesting": true
		}
	},
	"packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef"
}

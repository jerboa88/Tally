---
import { getLocaleStrings } from '@i18n/index.ts';
import { Info } from '@lucide/astro';
import type { HTMLAttributes } from 'astro/types';
import type { WithChildren } from '../../types.ts';
import Icon from './Icon.astro';
import Strong from './Strong.astro';

/**
 * Props for an alert/notification aside with configurable styling. Used by Markdoc.
 */
type Props = WithChildren<true, HTMLAttributes<'aside'>>;

const msg = getLocaleStrings(Astro).alert.note.title;

const props = Astro.props;
---

<aside role="note" {...props}>
	<Strong>
		<Icon icon={Info} />
		{msg}
	</Strong>
	<slot />
</aside>

<style>
	aside {
		display: flex;
		flex-direction: column;
		gap: var(--p-sm);
		padding: var(--p-md);
		border-radius: var(--r-md);
		border: var(--b-md) solid var(--p);

		strong {
			display: inline-flex;
			flex-direction: row;
			align-items: center;
			gap: var(--p-xs);
			color: var(--p);
			font-family: var(--f-header);
		}

		p {
			margin: 0;
		}
	}
</style>

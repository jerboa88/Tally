---
import { wKey } from '@utils/index.ts';
import type { HTMLAttributes } from 'astro/types';
import type { CollectionEntry, CollectionKey } from 'astro:content';
import type { WithChildren } from '../../types.ts';
import MarkdocContent from './MarkdocContent.astro';

/**
 * Props for rendering a Markdown article from a content collection.
 *
 * @property entry - The content collection entry to render
 */
interface Props extends WithChildren<false, HTMLAttributes<'article'>> {
	entry: CollectionEntry<CollectionKey>;
}

const { entry, ...restProps } = Astro.props;
---

<article {...restProps} {...wKey('article', entry.slug)}>
	<MarkdocContent {entry} />
</article>

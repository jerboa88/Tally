---
import type { HTMLAttributes } from 'astro/types';
import type { WithChildren } from '../../types.ts';
import Card from './Card.astro';

/**
 * Props for a textarea with auto-resize and custom scrollbar styling.
 *
 * Explicitly disallows children as textarea content is controlled by value.
 */
type Props = WithChildren<false, HTMLAttributes<'textarea'>>;

const props = Astro.props;
---

<Card as="textarea" {...props} />

<style>
	textarea {
		min-height: 18rem;
		max-height: var(--max-w);
		border: none;
		padding: var(--p-md);
		background-color: var(--bg-2);
		color: var(--fg);
		font-family: var(--f-body);
		font-size: var(--f-md);
		font-weight: var(--f-normal);
		transition-duration: var(--d-md);
		resize: block;
		view-transition-name: input;
		line-height: inherit;
		/* Revert `overflow:hidden` set by Card */
		overflow-y: auto;
		contain: strict;

		&:focus {
			background-color: var(--bg-3);
		}

		&:disabled {
			opacity: var(--o-md);
		}

		&::-webkit-scrollbar {
			width: var(--p-xs);
		}

		&::-webkit-scrollbar-thumb {
			border-radius: var(--r-md);
			background-color: var(--fg);
			box-shadow: var(--s-box-md);
			cursor: pointer;
		}

		&::placeholder {
			color: color-mix(in oklch, var(--fg), transparent var(--mix-lg));
		}
	}
</style>
